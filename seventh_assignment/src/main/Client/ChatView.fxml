<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.ChatController">
    <children>
        <TextArea fx:id="chatArea" prefHeight="400.0" prefWidth="600.0" editable="false"/>
        <HBox spacing="10.0" padding="10.0">
            <children>
                <TextField fx:id="inputField" HBox.hgrow="ALWAYS"/>
                <Button fx:id="sendButton" text="Send"/>
                <Button fx:id="fileButton" text="Send File"/>
            </children>
        </HBox>
        <ProgressBar fx:id="progressBar" prefWidth="600.0"/>
    </children>
</VBox>
